padding-left = 0
padding-right = 0

module-margin = 1

tray-position = right
tray-detached = false
tray-maxsize = 16
tray-scale = 1.0
tray-padding = 0

cursor-click = pointer
cursor-scroll = ns-resize

dpi = 96

; "字体名: 字体大小; 上下偏移量"
; 矢量字体
font-0 = "Source Han Sans CN: pixelsize=12; 3"
