[colors]
include-file = /home/yj/.config/polybar/colors


[global/wm]
margin-top = 5
margin-bottom = 5


[settings]
throttle-input-for = 30
throttle-output = 5
throttle-output-for = 10

screenchange-reload = true


[bar/mypolybar]
monitor-exact = false
bottom = false
fixed-center = true
enable-ipc = true
dim-value = 1.0
wm-name =
locale = en_US.UTF-8
separator =

width = 100%
height = 28
