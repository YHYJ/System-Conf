#!/usr/bin/env bash

: <<!
Name: startfm
Author: YJ
Email: yj1516268@outlook.com
Created Time: 2020-04-27 13:51:05

Description: 在指定目录启动文件管理器

Attentions:
-

Depends:
- util-linux
!

####################################################################
#+++++++++++++++++++++++++ Define Variable ++++++++++++++++++++++++#
####################################################################
#------------------------- Exit Code Variable
readonly normal=0    # 一切正常
readonly err_param=2 # 参数错误

####################################################################
#+++++++++++++++++++++++++ Define Function ++++++++++++++++++++++++#
####################################################################
#------------------------- Feature Function
function getArgType() {
  if [[ -d $1 ]]; then
    xdg-open "$1" &>/dev/null &
    exit $normal
  else
    echo -e "\n\\e[31m[✘]\\e[0m 参数错误"
    exit $err_param
  fi
}

####################################################################
#++++++++++++++++++++++++++++++ Main ++++++++++++++++++++++++++++++#
####################################################################
getArgType "$1"
